server {
  enabled = true
  bootstrap_expect = {{ nomad_bootstrap_expect }}
  encrypt = "{{ nomad_encrypt_key }}"
}

{% if nomad_tls_enable | bool %}
tls {
  http = true
  rpc  = true

  ca_file = "{{ nomad_tls_dir }}/{{ nomad_ca_file }}"
  cert_file = "{{ nomad_tls_dir }}/{{ nomad_server_cert_file }}"
  key_file = "{{ nomad_tls_dir }}/{{ nomad_server_key_file }}"

  verify_server_hostname = true
  verify_https_client    = true
}
{% endif %}